{
    "manifest_version": 2,
    "name": "WikimediaDebug",
    "description": "Injects 'X-Wikimedia-Debug' header to HTTP requests.",
    "author": "Ori Livneh",
    "version": "1.8.2",
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon_38_off.png",
        "default_title": "X-Wikimedia-Debug",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mediawiki.org/*",
                "*://*.wikidata.org/*",
                "*://*.wikibooks.org/*",
                "*://*.wikimedia.org/*",
                "*://*.wikinews.org/*",
                "*://*.wikipedia.org/*",
                "*://*.wikiquote.org/*",
                "*://*.wikisource.org/*",
                "*://*.wikiversity.org/*",
                "*://*.wikivoyage.org/*",
                "*://*.wiktionary.org/*",
                "*://*.beta.wmflabs.org/*",
                "*://*.tools.wmflabs.org/*",
                "*://*.tools-static.wmflabs.org/*"
            ],
            "js": ["content_script.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "alarms",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "*://*.mediawiki.org/*",
        "*://*.wikidata.org/*",
        "*://*.wikibooks.org/*",
        "*://*.wikimedia.org/*",
        "*://*.wikinews.org/*",
        "*://*.wikipedia.org/*",
        "*://*.wikiquote.org/*",
        "*://*.wikisource.org/*",
        "*://*.wikiversity.org/*",
        "*://*.wikivoyage.org/*",
        "*://*.wiktionary.org/*",
        "*://*.beta.wmflabs.org/*",
        "*://*.tools.wmflabs.org/*",
        "*://*.tools-static.wmflabs.org/*"
    ],
    "applications": {
        "gecko": {
            "id": "wikimediadebug@wikimedia.org",
            "strict_min_version": "42.0"
        }
    }
}
